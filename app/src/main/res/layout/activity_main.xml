<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:id="@+id/ar_view_pane"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/calibrate_btn"
            style="@style/OverlayTextButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/calibrate"
            android:background="@drawable/bg_round_opaque"
            android:layout_margin="@dimen/main_overlay_margin"/>


        <RelativeLayout
            android:id="@+id/location_container"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_round_opaque"
            android:layout_margin="@dimen/main_overlay_margin"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/location_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_my_location_dark_gray_24dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/main_overlay_margin"
                android:layout_toRightOf="@+id/location_icon"
                android:layout_weight="3">
                <TextView
                    android:id="@+id/bearing"
                    style="@style/OverlayText"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="@string/metrics_placeholder"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/latitude"
                    style="@style/OverlayText"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="@string/metrics_placeholder"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/longitude"
                    style="@style/OverlayText"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="@string/metrics_placeholder"
                    android:layout_weight="1" />

            </LinearLayout>
        </RelativeLayout>

        <ImageButton
            android:id="@+id/menu_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_dark_gray_24dp"
            android:background="@drawable/bg_round_opaque"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/main_overlay_margin"/>

        <RelativeLayout
            android:id="@+id/loading_container"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="@dimen/padding_conatiner"
            android:background="@drawable/bg_round_opaque"
            android:gravity="center">
            <ProgressBar
                android:id="@+id/progress"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/margin_text_top"
                android:layout_height="wrap_content"/>
            <TextView
                style="@style/OverlayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progress"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_text_top"
                android:text="@string/loading"/>
        </RelativeLayout>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111"
        app:menu="@menu/main_drawer"/>

</android.support.v4.widget.DrawerLayout>